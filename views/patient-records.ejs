<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medical Records</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
  <div class="container py-5">
    <h1 class="text-center mb-5">My Medical Records</h1>

    <% if (records.length > 0) { %>
      <div class="row gy-4">
        <% records.forEach(record => { %>
          <div class="col-12">
            <div class="card record-card shadow-sm">
              <div class="card-body">
                <h5 class="card-title">Doctor: <%= record.doctor_name %></h5>
                <p class="card-text"><strong>Disease:</strong> <%= record.disease_category %></p>
                <p class="card-text"><strong>Prescription:</strong> <%= record.prescription %></p>
                <p class="card-text"><strong>Medicine:</strong> <%= record.medicine %></p>
                <p class="card-text"><strong>Diagnosis Report:</strong> <%= record.diagnosis_report ? 'Yes' : 'No' %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-muted">No medical records found.</p>
    <% } %>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
